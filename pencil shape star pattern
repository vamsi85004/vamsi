#include<stdio.h>
int main()
{
    int i,j,k,n;
    printf("Enter the Value for n : ");
    scanf("%d",&n);
 
    for(i=-n; i<=n; i++) 
    {
        k=i;
 
        for(j=0; j<=n; j++)
        {
            if(k<=j)
                printf("* ");
            else
                printf(" ");
        }
        printf("\n");
    }
    return 0;
}
